SRCS	= ft_isblank.c \
			ft_iscntrl.c \
			ft_isgraph.c \
			ft_ispunct.c \
			ft_isspace.c \
			ft_islower.c \
			ft_isupper.c \
			ft_isxdigit.c \
			ft_memset.c \
			ft_bzero.c \
