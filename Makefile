			ft_lstdelone.c \
		#  ft_lstmap.c \

CC = clang

CFLAGS = -fPIC -Wall -Wextra -Werror

LDFLAGS = -shared

RM = rm -f

NAME = libft.a

AR = ar -rc

SONAME = libft.so

OBJS = $(SRCS:.c=.o)

.c.o:	
		$(CC) $(CFLAGS) -c $< -o $(<:.c=.o) 

all :		${NAME}

so:			${SONAME}

$(NAME):	$(OBJS)
		$(AR) $(NAME) $(OBJS)

$(SONAME):	$(OBJS)
		$(CC) ${LDFLAGS} -o $@ $^

$(SRCS:.c=.d):%.d:%.c
		$(CC) $(CFLAGS) -MM $< >$@

include $(SRCS:.c=.d)

clean:
		${RM} ${OBJS}

fclean:		clean
		${RM} $(NAME)

soclean: 
		-${RM} ${SONAME} $(SRCS:.c=.d)

re:			clean all

sore:		soclean so

coffee:
	@clear
	@echo ""
	@echo "                   ("
