		  ft_lstsize.c \
		  ft_lstclear.c \
		  ft_lstlast.c \
		  ft_lstiter.c \
		  ft_lstadd_back.c \
		  ft_lstdelone.c \
		#  ft_lstmap.c \

CC = clang

CFLAGS = -fPIC -Wall -Wextra -Wextra  # C flags

LDFLAGS = -shared   # linking flags

RM = rm -f   # rm command

TARGET_LIB = libft.so  # target lib

OBJS = $(SRCS:.c=.o)

so: ${TARGET_LIB}

$(TARGET_LIB): $(OBJS)
	$(CC) ${LDFLAGS} -o $@ $^

$(SRCS:.c=.d):%.d:%.c
	$(CC) $(CFLAGS) -MM $< >$@

include $(SRCS:.c=.d)

clean:
	-${RM} ${TARGET_LIB} ${OBJS} $(SRCS:.c=.d)

re: clean so


