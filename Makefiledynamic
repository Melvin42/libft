SRCS	= ft_isalpha.c \
		  ft_memccpy.c \
		  ft_strjoin.c \
		  ft_strncmp.c \
		  ft_atoi.c \
		  ft_itoa.c \
		  ft_isascii.c \
		  ft_memcpy.c \
		  ft_memmove.c \
		  ft_memchr.c \
		  ft_memcmp.c \
		  ft_strnstr.c \
		  ft_split.c \
		  ft_strlcat.c \
		  ft_strrchr.c \
		  ft_calloc.c \
		  ft_bzero.c \
		  ft_isdigit.c \
		  ft_memset.c \
		  ft_strchr.c \
		  ft_strlcpy.c \
		  ft_tolower.c \
		  ft_isalnum.c \
		  ft_isprint.c \
		  ft_strmapi.c \
